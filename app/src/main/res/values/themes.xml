    <style name="Theme.GraphQLLeadsApp" parent="Base.Theme.GraphQLLeadsApp" />

    <style name="AppChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Customize the properties of the Chip style -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
